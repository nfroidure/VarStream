{
  "name": "varstream",
  "description": "Stream variables between 2 JavaScript threads (client/server, ipc, worker/main thread).",
  "version": "0.3.2",
  "author": "Nicolas Froidure",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/nfroidure/VarStream.git"
  },
  "engines": {
    "node": ">=0.10.*"
  },
  "dependencies": {
    "readable-stream": "^1.0.33"
  },
  "devDependencies": {
    "mocha": "~2.1.0",
    "mocha-lcov-reporter": "0.0.1",
    "coveralls": "~2.11.2",
    "istanbul": "~0.3.5"
  },
  "scripts": {
    "test": "node_modules/mocha/bin/mocha tests/*.mocha.js",
    "coveralls": "./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha --report lcovonly -- tests/*.mocha.js -R spec -t 5000 && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "cover": "./node_modules/istanbul/lib/cli.js cover --report html ./node_modules/mocha/bin/_mocha -- tests/*.mocha.js -R spec -t 5000"
  },
  "keywords": [
    "variable",
    "file",
    "stream",
    "json",
    "ipc",
    "pipe",
    "format",
    "read",
    "write",
    "localization",
    "configuration"
  ],
  "main": "./src/VarStream",
  "preferGlobal": "true",
  "bin": {
    "varstream2json": "cli/varstream2json.js",
    "json2varstream": "cli/json2varstream.js"
  }
}
